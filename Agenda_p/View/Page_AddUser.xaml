<UserControl x:Class="Agenda_p.View.Page_AddUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agenda_p.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Grid>
                <TextBox x:Name="FirstNameTextBox" Width="200" Margin="5" />
                <TextBlock Text="Prénom" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
            <Grid>
                <TextBox x:Name="LastNameTextBox" Width="200" Margin="5" />
                <TextBlock Text="Nom" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
            <Grid>
                <DatePicker x:Name="BirthDatePicker" Width="200" Margin="5" />
            </Grid>
            <Grid>
                <TextBox x:Name="EmailTextBox" Width="200" Margin="5" />
                <TextBlock Text="Email" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
            <Grid>
                <TextBox x:Name="PhoneTextBox" Width="200" Margin="5" />
                <TextBlock Text="Numéro de Téléphone" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
            <Button Content="Ajouter" Click="AddButton_Click" Margin="10" />
        </StackPanel>

    </Grid>
</UserControl>
