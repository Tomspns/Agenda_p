<UserControl x:Class="Agenda_p.View.Page_Contacts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agenda_p.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Green">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Pour prendre tout l'espace restant -->
            <RowDefinition Height="Auto" />
            <!-- Pour l'espace du ListView -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <!-- Autres éléments que tu pourrais ajouter en haut -->
        </StackPanel>

        <ListView Name="ContactsListView" 
                  Grid.Row="1" 
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Bottom"
                  Margin="10" 
                  Width="300" 
                  Height="200">
            <!-- Ajuste la largeur et la hauteur selon tes besoins -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" />
                    <GridViewColumn Header="Prénom" DisplayMemberBinding="{Binding Prénom}" />
                    <GridViewColumn Header="Naissance" DisplayMemberBinding="{Binding Naissance}" />
                    <GridViewColumn Header="E-mail" DisplayMemberBinding="{Binding Email}" />
                    <GridViewColumn Header="Numéro de téléphone" DisplayMemberBinding="{Binding Numéro}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
