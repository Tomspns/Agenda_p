<UserControl x:Class="Agenda_p.View.Page_Contacts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agenda_p.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Pink">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            <Grid>
                <TextBox Name="SearchTextBox" Width="200" Margin="0,0,10,0" />
                <TextBlock Text="Rechercher un utilisateur..." 
                           Foreground="Gray" 
                           VerticalAlignment="Center"
                           Margin="5,0,0,0" 
                           IsHitTestVisible="False"
                           Visibility="{Binding ElementName=SearchTextBox, Path=Text.Length}"/>
            </Grid>
            <Button Content="Rechercher" Click="SearchButton_Click" Background="PeachPuff"/>
        </StackPanel>

        <ListView Name="ContactsListView" 
                  Grid.Row="1" 
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Stretch"
                  Margin="20"
                  Width="1000"
                  Background="Transparent">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" Width="100"  />
                    <GridViewColumn Header="Prénom" DisplayMemberBinding="{Binding Prénom}" Width="100" />
                    <GridViewColumn Header="Naissance" DisplayMemberBinding="{Binding Naissance}" Width="100" />
                    <GridViewColumn Header="E-mail" DisplayMemberBinding="{Binding Email}" Width="200" />
                    <GridViewColumn Header="Numéro de téléphone" DisplayMemberBinding="{Binding Numéro}" Width="200" />
                </GridView>
            </ListView.View>
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Background" Value="PeachPuff"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </ListView.Resources>
        </ListView>

        <Button Content="Ajouter un Contact" 
                Click="AddContactButton_Click" 
                Width="200" 
                Height="50"
                Margin="20" 
                Grid.Row="2" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Background="PeachPuff"/>
    </Grid>
</UserControl>
